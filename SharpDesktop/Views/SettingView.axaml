<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SharpDesktop.Views.SettingView"
             xmlns:app="clr-namespace:SharpDesktop"
             xmlns:views="using:SharpDesktop.Views"
             xmlns:vm="using:SharpDesktop.ViewModels"
             x:DataType="vm:SettingViewModel">
	<Border Background="Gray"
		Height="350"
		Width="200">
		<Grid RowDefinitions="Auto,*">
			<StackPanel Grid.Row="0" Orientation="Horizontal">
				<TextBlock Text="Settings"
						   FontSize="24"/>
				<Button Command="{Binding CloseCommand}"
                        Margin="60,0,0,0"
                        Background="Transparent">
					<materialIcons:MaterialIcon Kind="CloseBold"/>
				</Button>
			</StackPanel>

			<StackPanel Grid.Row="1" Orientation="Vertical">
                
			</StackPanel>
		</Grid>
	</Border>
</UserControl>
